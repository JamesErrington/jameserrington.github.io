<ul class="post-list">
  {%- for post in postlist -%}
    <li class="post-list__item">
	  <p class="post-list__date">{{ post.date | readableDate }}</p>
	  <h3 class="post-list__title">
		<a href="{{ post.url }}">{{ post.data.title }}</a>
	  </h3>
	  <p class="post-list__excerpt">{{ post.data.summary | safe  }}</p>
	  <span class="post-list__tags">
		{% set tagList = post.data.tags %}
	    {%- include "tag-list.njk" -%}
	  </span>
    </li>
  {%- endfor -%}
</ul>
